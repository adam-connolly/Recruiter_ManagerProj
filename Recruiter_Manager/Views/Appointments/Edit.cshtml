@model Recruiter_Manager.Models.Appointment

@{
    ViewData["Title"] = "Edit Appointment | Recruiter Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Id" />
            <div class="form-group">
                <label asp-for="@Model.AppointmentName" class="control-label"></label>
                <input asp-for="@Model.AppointmentName" class="form-control" />
                <span asp-validation-for="@Model.AppointmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.AppointmentDate" class="control-label"></label>
                <input asp-for="@Model.AppointmentDate" class="form-control" />
                <span asp-validation-for="@Model.AppointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.AppointmentDetails" class="control-label"></label>
                <input asp-for="@Model.AppointmentDetails" class="form-control" />
                <span asp-validation-for="@Model.AppointmentDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
